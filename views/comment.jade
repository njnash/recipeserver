doctype html
html
  head
    title Comment on: #{recipe.Title}
    link(rel='stylesheet', href='/stylesheets/recipe.css')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    meta(name='robots' content='noindex')

body
  div(class='header no-print')
    a(href="/")
      img(src="images/Audrey's Great Big Book of Food Title Small Alpha.png" style="width:auto;height:auto;max-width:100%;max-height:100%")
  div(class='page')
    h1 Comment on: #{recipe.Title}
    p(class='undertitle') ##{recipe.ID}
    p
    form(action='/sendcomment')
      div
        p Name or email address:
          input(type="text",name="name",size="50",autofocus=true)
      div
        textarea(name="comment",rows="10",cols="80")
      div
        input(type='submit',Value='Send Comment',style='vertical-align:top;margin-left:0.1in')
      input(type='hidden',name='ID',value=id)

