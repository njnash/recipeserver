doctype html
html
  head
    title Comment
    link(rel='stylesheet', href='/stylesheets/common.css')
    style.
        * {
          margin-top:.05in;
        }
        body {
          max-width: 6.0in;
        }
        .commentArea {
          width:100%;
          font-size:1.0em;
        }
        .textInput {
          font-size:1.0em;
        }
        .sendButton {
          vertical-align:top;
          margin-left:0.1in;
        }
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    meta(name='robots' content='noindex')

  body(class="localBody")
    div(id="middleContainer",class="box")
      a(href="/")
        div(class='header')
      div(class='page')
        if (recipe)
          h1 Comment on: #{recipe.Title}
          p(class='undertitle') ##{recipe.ID}
        else
          h1 Comment on Audrey's Great Big Book of Food.
        p
        form(action='/sendcomment')
          div
            p Your name or email address:
              input(type="text",name="name",size="40",autofocus=true,onfocus="this.select();",class='textInput')
          div
            textarea(name="comment",rows="10",class="commentArea")
          div
            input(type='submit',Value='Send Comment',class='sendButton')
          input(type='hidden',name='ID',value=id)
        p
        p(class="finePrint") Cookie: #{cookie}

