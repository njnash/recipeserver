doctype html
html
  head
    title #{recipe.Title}
    link(rel='stylesheet', href='/stylesheets/recipe.css')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    meta(name='robots' content='noindex')

- var hasPictures = false;
mixin recipeImages(str, imageNames)
  - var splitArray = str.split('\n');
  if (splitArray.length > 0 && hidePicts != true)
    h2 #{imageNames}
  each item in splitArray
    - hasPictures = true;
    if (hidePicts != true)
      a(href='/images/Pictures/'+item)
        img(src='/images/Pictures/'+item, style="max-width: 6in;margin-left: 0.1in;")
      br

mixin recipeBody(str)
  - var splitArray = str.split('\n');
  - var val = 1
  ol
    each item in splitArray
      - str = item;
      - str = str.replace(/\$_(\w+)/g, "<b><i>$1</i></b>");
      - str = str.replace(/\^_(\w+)/g, "<u><i>$1</i></u>");
      - str = str.replace(/\$(\w+)/g, "<b>$1</b>");
      - str = str.replace(/_(\w+)/g, "<u>$1</u>");
      - str = str.replace(/\^(\w+)/g, "<i>$1</i>");
      - str = str.replace(/\[R ([^\]]*)]([^\[]*)\[\/R\]/g, function(str,p1,p2) {return '<a href="/recipe?title=' + encodeURIComponent(p1) + '">' + p2 + '</a>';});
      if (str.substr(0,2) == '. ')
        li(class='liUnordered') !{str.substr(2)}
        - val = 1;
      else if (str.substr(0,2) == '# ')
        li(class='liOrdered', value=val) !{str.substr(2)}
        - ++val;
      else if (str.substr(0,2) == '* ')
        h3 !{str.substr(2)}
        - val = 1;
      else
        p !{str}
        - val = 1;

body
  div(class='header no-print')
    a(href="/")
      img(src="images/Audrey's Great Big Book of Food Title Small Alpha.png" style="width:auto;height:auto;max-width:100%;max-height:100%")
  div(class='page')
    h1 #{recipe.Title}
    p(class='undertitle') ##{recipe.ID} &nbsp;&nbsp;&nbsp;
      a(href='/comment?ID='+id) send a comment about this recipe
        

    if (recipe.Source)
      div(class="source") Source: #{recipe.Source}
    if recipe['Pre-Notes']
      h2 Pre-Notes
      + recipeBody(recipe['Pre-Notes'])
    if recipe.Ingredients
      h2 Ingredients
      + recipeBody(recipe.Ingredients)
    if recipe.Instructions
      h2 Instructions
      + recipeBody(recipe.Instructions)
    if recipe['How to Photos']
      + recipeImages(recipe['How to Photos'], 'How to Photos')
    if recipe['Post-Notes']
      h2 Post-Notes
      + recipeBody(recipe['Post-Notes'])
    if recipe['Picture']
      + recipeImages(recipe['Picture'], 'Picture of Recipe')
    if (recipe['Servings'])
      div(class='recipeAttributes') Serves: #{recipe['Servings']}
    if (recipe['Prep Time'])
      div(class='recipeAttributes') Prep Time: #{recipe['Prep Time']}
    if (recipe['Cook Time'])
      div(class='recipeAttributes') Cook Time: #{recipe['Cook Time']}
    if (recipe['Course'])
      div(class='recipeAttributes') Course: #{recipe['Course']}
    if (recipe['Type of Food'])
      div(class='recipeAttributes') Type of Food: #{recipe['Type of Food']}
    if (recipe['Ethnicity'])
      div(class='recipeAttributes') Ethnicity: #{recipe['Ethnicity']}
    if (recipe['Key Ingredient'])
      div(class='recipeAttributes') Key Ingredient: #{recipe['Key Ingredient']}
    if (recipe['Difficulty'])
      div(class='recipeAttributes') Difficulty: #{recipe['Difficulty']}
    if (recipe['Make Ahead'])
      div(class='recipeAttributes') Make Ahead: #{recipe['Make Ahead']}
    if (hasPictures)
      if (hidePicts == true)
        div(style="font-size:0.8em;padding-top:0.1in;")
          a(href='/recipe?ID='+id) show pictures
      else
        div(style="font-size:0.8em;padding-top:0.1in;")
          a(href='/recipe?hidePicts=true&ID='+id) hide hictures
